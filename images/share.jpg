<svg xmlns="http://www.w3.org/2000/svg" width="500" height="400" viewBox="0 0 500 400">
  <defs>
    <linearGradient id="bg-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#f9e8d4" />
      <stop offset="100%" stop-color="#e6c9a8" />
    </linearGradient>
  </defs>
  
  <!-- 背景 -->
  <rect width="500" height="400" fill="url(#bg-gradient)" />
  
  <!-- 装饰边框 -->
  <rect x="10" y="10" width="480" height="380" stroke="#9b4e20" stroke-width="3" fill="none" rx="5" />
  <rect x="20" y="20" width="460" height="360" stroke="#9b4e20" stroke-width="1" fill="none" rx="3" stroke-dasharray="5,5" />
  
  <!-- 游戏标题 -->
  <text x="250" y="80" font-family="Arial, sans-serif" font-size="36" font-weight="bold" text-anchor="middle" fill="#9b4e20">宫斗小游戏</text>
  <text x="250" y="120" font-family="Arial, sans-serif" font-size="18" text-anchor="middle" fill="#9b4e20">成为后宫之主</text>
  
  <!-- 宫殿简化图形 -->
  <g transform="translate(150, 150)">
    <!-- 宫殿屋顶 -->
    <path d="M0,50 L100,0 L200,50" stroke="#9b4e20" stroke-width="3" fill="#c17946" fill-opacity="0.5" />
    
    <!-- 宫殿主体 -->
    <rect x="25" y="50" width="150" height="100" stroke="#9b4e20" stroke-width="2" fill="#d4b08c" fill-opacity="0.5" />
    
    <!-- 宫殿柱子 -->
    <rect x="40" y="50" width="10" height="100" fill="#9b4e20" fill-opacity="0.7" />
    <rect x="95" y="50" width="10" height="100" fill="#9b4e20" fill-opacity="0.7" />
    <rect x="150" y="50" width="10" height="100" fill="#9b4e20" fill-opacity="0.7" />
    
    <!-- 宫殿门 -->
    <rect x="75" y="100" width="50" height="50" rx="5" stroke="#9b4e20" stroke-width="1" fill="#9b4e20" fill-opacity="0.4" />
  </g>
  
  <!-- 人物剪影 -->
  <g transform="translate(200, 300)">
    <!-- 女性剪影 -->
    <path d="M0,0 C5,-10 15,-10 20,0 L25,50 L-5,50 Z" fill="#9b4e20" fill-opacity="0.8" />
    <circle cx="10" cy="-15" r="10" fill="#9b4e20" fill-opacity="0.8" />
  </g>
  
  <!-- 游戏宣传语 -->
  <text x="250" y="350" font-family="Arial, sans-serif" font-size="16" text-anchor="middle" fill="#9b4e20">智谋与权谋的宫廷之旅</text>
  <text x="250" y="375" font-family="Arial, sans-serif" font-size="14" text-anchor="middle" fill="#9b4e20">扫码立即体验</text>
</svg>